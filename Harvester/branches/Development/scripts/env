#!/bin/bash

VERSION=0.7.0
MIN_MEM=1024m
MAX_MEM=3072M

# Set working directory
cd /usr/share/vivo/harvester

# Check for backups dir
if[ -d backups ]; then
  
else
  mkdir backups
fi

# define shorthand aliases
alias Diff="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.diff.Diff"
alias D2RMapFetch="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.fetch.D2RMapFetch"
alias JDBCFetch="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.fetch.JDBCFetch"
alias NIHFetch="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.fetch.NIHFetch"
alias NLMJournalFetch="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.fetch.NLMJournalFetch"
alias OAIFetch="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.fetch.OAIFetch"
alias PubmedFetch="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.fetch.PubmedFetch"
alias PubmedHTTPFetch="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.fetch.PubmedHTTPFetch"
alias Qualify="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.qualify.Qualify"
alias Score="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.score.Score"
alias Transfer="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.transfer.Transfer"
alias GlozeTranslator="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.translate.GlozeTranslator"
alias RDFTranslator="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.translate.RDFTranslator"
alias SPARQLTranslator="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.translate.SPARQLTranslator"
alias XSLTranslator="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.translate.XSLTranslator"
alias ChangeNamespace="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.update.ChangeNamespace"
alias Update="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.update.Update"
alias DatabaseClone="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.util.DatabaseClone"
alias Merge="java -Xms$MIN_MEM -Xmx$MAX_MEM -cp bin/harvester-$VERSION.jar:bin/dependency/* org.vivoweb.harvester.util.Merge"