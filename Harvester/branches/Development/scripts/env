#!/bin/bash

function get-date {
  date +%Y-%m-%d'T'%T
}

HARVESTERDIR=`dirname "$(cd "${0%/*}" 2>/dev/null; echo "$PWD"/"${0##*/}")"`
HARVESTERDIR=$(cd $HARVESTERDIR; cd ..; pwd)

# define shared variables
VIVOCONFIG="config/models/vivo.xml"
LOG_LEVEL=INFO
VERSION=1.0beta7
MIN_MEM=1024m
MAX_MEM=3072m
CHECKEMPTY=true

DATE=`get-date`
HARVESTER_TASK_DATE="$HARVESTER_TASK.$DATE"
#Variable for optimizations to the Java virtual machine.
#-server				Run in server mode, which takes longer to start but runs faster
#-d64					Use 64-bit JVM
#-XX:+UseConcMarkSweepGC		Use concurrent (low pause time) garbage collector	
#-XX:+DisableExplicitGC			Prevent direct calls to garbage collection in the code
#-XX:+UseAdaptiveGCBoundary		Allow young/old boundary to move
#-XX:MaxGCPauseMillis=500		Target maximum for garbage collection time
#-XX:-UseGCOverheadLimit		Limit the amount of time that Java will stay in Garbage Collection before throwing an out of memory exception
#-XX:SurvivorRatio=16			Shrink eden slightly (Normal is 25)
#-Xnoclassgc				Disable collection of class objects
#-XX:UseSSE=3				Use SSE3 Processor extensions
#-XX:ParallelGCThreads=3		Maximum number of Parallel garbage collection tasks
#OPTS="-d64 -XX:+UseConcMarkSweepGC -XX:+DisableExplicitGC -XX:+UseAdaptiveGCBoundary -XX:MaxGCPauseMillis=500 -XX:-UseGCOverheadLimit -XX:SurvivorRatio=16 -Xnoclassgc -XX:UseSSE=3 -XX:ParallelGCThreads=3"
#OPTS="-XX:+UseConcMarkSweepGC -XX:+DisableExplicitGC -XX:+UseAdaptiveGCBoundary -XX:MaxGCPauseMillis=500 -XX:-UseGCOverheadLimit -XX:SurvivorRatio=16 -Xnoclassgc -XX:UseSSE=3 -XX:ParallelGCThreads=3"
OPTS="-Xms$MIN_MEM -Xmx$MAX_MEM -Dharvester-task=$HARVESTER_TASK_DATE -Dconsole-log-level=$LOG_LEVEL -Dconsole-log-level=$LOG_LEVEL -cp lib/d2rmap-V03.jar:bin/harvester-$VERSION.jar:bin/dependency/*"

# define shorthand aliases
RenameResources="java $OPTS -Dprocess-task=RenameResources org.vivoweb.harvester.qualify.RenameResources"
Diff="java $OPTS -Dprocess-task=Diff org.vivoweb.harvester.diff.Diff"
D2RMapFetch="java $OPTS -Dprocess-task=D2RMapFetch org.vivoweb.harvester.fetch.D2RMapFetch"
JDBCFetch="java $OPTS -Dprocess-task=JDBCFetch org.vivoweb.harvester.fetch.JDBCFetch"
NIHFetch="java $OPTS -Dprocess-task=NIHFetch org.vivoweb.harvester.fetch.NIHFetch"
NLMJournalFetch="java $OPTS -Dprocess-task=NLMJournalFetch org.vivoweb.harvester.fetch.NLMJournalFetch"
OAIFetch="java $OPTS -Dprocess-task=OAIFetch org.vivoweb.harvester.fetch.OAIFetch"
PubmedFetch="java $OPTS -Dprocess-task=PubmedFetch org.vivoweb.harvester.fetch.PubmedFetch"
PubmedHTTPFetch="java $OPTS -Dprocess-task=PubmedHTTPFetch org.vivoweb.harvester.fetch.PubmedHTTPFetch"
Qualify="java $OPTS -Dprocess-task=Qualify org.vivoweb.harvester.qualify.Qualify"
Score="java -server $OPTS -Dprocess-task=Score org.vivoweb.harvester.score.Score"
Match="java $OPTS -Dprocess-task=Match org.vivoweb.harvester.score.Match"
Transfer="java $OPTS -Dprocess-task=Transfer org.vivoweb.harvester.transfer.Transfer"
GlozeTranslator="java $OPTS -Dprocess-task=GlozeTranslator org.vivoweb.harvester.translate.GlozeTranslator"
RDFTranslator="java $OPTS -Dprocess-task=RDFTranslator org.vivoweb.harvester.translate.RDFTranslator"
SPARQLTranslator="java $OPTS -Dprocess-task=SPARQLTranslator org.vivoweb.harvester.translate.SPARQLTranslator"
XSLTranslator="java $OPTS -Dprocess-task=XSLTranslator org.vivoweb.harvester.translate.XSLTranslator"
ChangeNamespace="java $OPTS -Dprocess-task=ChangeNamespace org.vivoweb.harvester.qualify.ChangeNamespace"
Update="java $OPTS -Dprocess-task=Update org.vivoweb.harvester.update.Update"
DatabaseClone="java $OPTS -Dprocess-task=DatabaseClone org.vivoweb.harvester.util.DatabaseClone"
Merge="java $OPTS -Dprocess-task=Merge org.vivoweb.harvester.util.Merge"
JenaConnect="java $OPTS -Dprocess-task=JenaConnect org.vivoweb.harvester.util.repo.JenaConnect"
SanitizeMODSXML="java $OPTS -Dprocess-task=SanitizeMODSXML org.vivoweb.harvester.util.SanitizeMODSXML"
XPathTool="java $OPTS -Dprocess-task=XPathTool org.vivoweb.harvester.util.XPathTool"

#Mysql username, password, and server address for backups in scripts
#parse VIVO.xml for these values
#need to reconcile having 2 places for this
SERVER=`$XPathTool -e "/Model/Param[@name='dbUrl']" -x $VIVOCONFIG | sed 's|^.*://\([^:^/]*\)[:/].*$|\1|g'`
DBNAME=`$XPathTool -e "/Model/Param[@name='dbUrl']" -x $VIVOCONFIG | sed 's|^.*/\(.*\)$|\1|g'`
USERNAME=`$XPathTool -e "/Model/Param[@name='dbUser']" -x $VIVOCONFIG`
PASSWORD=`$XPathTool -e "/Model/Param[@name='dbPass']" -x $VIVOCONFIG`
NAMESPACE=`$XPathTool -e "/Model/Param[@name='namespace']" -x $VIVOCONFIG`
H2MODEL="config/models/h2-sdb.xml"
H2RH="config/recordhandlers/h2-jdbc.xml"
TFRH="config/recordhandlers/tfrh.xml"
BACKUPPATH="$HARVESTERDIR/backups"
LATESTBACKUPPATH="$BACKUPPATH/latest"

function prep {
  # Check for proper namespace
  if [ -z "$NAMESPACE" ]; then
    echo "Please specify namespace in $VIVOCONFIG file before running"
    exit
  fi
  
  #if [[ $NAMESPACE != */ ]] || $NAMESPACE != *#]; then
  #  echo "Namespace appears incorrect -- Please check namespace in $VIVOCONFIG file"
  #  exit
  #fi
  
  # Check for backups dir
  if [ ! -d $BACKUPPATH ]; then
    mkdir $BACKUPPATH
  fi
  
  # Check for latest backups dir
  if [ ! -d $LATESTBACKUPPATH ]; then
    mkdir $LATESTBACKUPPATH
  fi
}

function backup-path {
  # usage: backup-path <Directory> <BackupBaseFileName>
  # backup the given directory to the given file
  date=`get-date`
  BACK="$HARVESTER_TASK.$2.tar.gz"
  tar -czpf $BACKUPPATH/$date.$BACK $1
  ln -sf $BACKUPPATH/$date.$BACK $LATESTBACKUPPATH/$BACK
}

function restore-path {
  # usage: restore-path <Directory> <BackupBaseFileName>
  # uncomment to restore the given file to the given directory
  BACK=$HARVESTER_TASK.$2.tar.gz
  tar -xzpf $LATESTBACKUPPATH/$BACK $1
}

function backup-file {
  # usage: backup-file <FileName> <BackupBaseFileName>
  # backup a file
  date=`get-date`
  BACK=$HARVESTER_TASK.$2
  cp $1 $BACKUPPATH/$date.$BACK
  ln -sf $BACKUPPATH/$date.$BACK $LATESTBACKUPPATH/$BACK
}

function restore-file {
  # usage: restore-file <FileName> <BackupBaseFileName>
  # restore a file
  BACK=$HARVESTER_TASK.$2
  cp -f $LATESTBACKUPPATH/$BACK $1
}

function backup-mysqldb {
  # usage: backup-mysqldb <BackupBaseFileName>
  # backup the vivo mysql database to the given file
  date=`get-date`
  BACK="$HARVESTER_TASK.$DBNAME.$1.sql"
  mysqldump -h $SERVER -u $USERNAME -p$PASSWORD $DBNAME > $BACKUPPATH/$date.$BACK
  ln -sf $BACKUPPATH/$date.$BACK $LATESTBACKUPPATH/$BACK
}

function restore-mysqldb {
  # usage: restore-mysqldb <BackupBaseFileName>
  # Restore pretransfer vivo mysql database
  BACK="$HARVESTER_TASK.$DBNAME.$1.sql"
  mysql -h $SERVER -u $USERNAME -p$PASSWORD -e "drop database $DBNAME;"
  mysql -h $SERVER -u $USERNAME -p$PASSWORD -e "create database $DBNAME;"
  mysql -h $SERVER -u $USERNAME -p$PASSWORD $DBNAME < $LATESTBACKUPPATH/$BACK
}